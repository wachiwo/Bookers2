
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'userinfo', user: @user %> <%#共通化呼び出しコード%>
        <%= render 'books/newbook', book: @book %> <%#共通化呼び出しコード%>
      </div>
      <div class="col-md-8 offset-md-1">
        <h1>Users</h1>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.profile_image, size: "40x40" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", "/users/#{user.id}" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>