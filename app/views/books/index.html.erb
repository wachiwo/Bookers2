  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <% if @book.errors.any? %>
          <%= @book.errors.count %>errors prohibited this obj from being saved:
            <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            </ul>
              <% end %>
        <% end %>
            <%= render 'users/userinfo', user: @user %>
            <%= render 'newbook', book: @book %> <%#共通化呼び出しコード%>
            </div>
            <div class="col-md-8 offset-md-1">
            <h1>Books</h1>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th colspan="3">Opinion</th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                  <tr>
                    <td><%= link_to image_tag(book.user.profile_image, size: "40x40"), user_path(book.user.id) %></td> <%#ここの遷移先が自分になる%>
                    <td><%= link_to book.title, book_path(book.id) %></td>
                    <td><%= book.body %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
  </div>