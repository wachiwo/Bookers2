
  <%= flash[:create] %>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <%= render 'users/userinfo', user: @book.user %>
          <%= render 'newbook', book: @newbook %> <%#共通化呼び出しコード%>
        </div>
        <div class="col-md-8 offset-md-1">
          <h1>Book detail</h1>
          <table class="table table-hover table-inverse">
            <tbody>
              <tr>
                <td><%= image_tag @book.user.profile_image, size: "40x40" %> 
                  <%= link_to @book.user.name, user_path(@book.user.id) %></td><%#ここの遷移先が自分になる%>
                <td><%= @book.body %></td>
                <td><%= link_to @book.title, book_path(@book.id) %></td> 
                <% if @book.user == current_user %>
                  <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
                  <td><%= link_to "Destroy", book_path(@book.id), method: :delete,"data-confirm" =>"本当に消しますか？" %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>